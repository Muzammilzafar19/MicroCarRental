<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ExataClass.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:background="@drawable/img_ferrari"/>



            </FrameLayout>

    <LinearLayout
        android:tag="sticky"
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="24.3dp"
        android:layout_marginRight="24.7dp"
        android:orientation="horizontal"
        android:paddingLeft="16.7dp"
        android:paddingBottom="15.3dp"
        android:paddingTop="15dp"
        android:background="@drawable/food_curve_rect">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="28.3dp"
            android:layout_gravity="center"
            android:src="@drawable/redcart"/>

        <customfonts.MyTextView_Lato_Light
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:layout_marginLeft="14.3dp"
            android:textSize="16.7sp"
            android:layout_gravity="center"
            android:textColor="#373737"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="21.3dp"
            android:layout_gravity="center"
            android:layout_marginRight="16.3dp"
            android:tint="#373737"
            android:src="@drawable/ic_right_arrow"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12.3dp"
        android:layout_marginTop="29.7dp"
        android:orientation="horizontal">


        <customfonts.MyTextView_Lato_Light
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OUR CARS"
            android:textStyle="bold"
            android:textSize="19.3sp"
            android:textColor="#373737"/>

        <customfonts.MyTextView_Lato_Light
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all"
            android:textColor="#a5a5a5"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_dish"
        android:clipToPadding="false"
        android:paddingLeft="24.3dp"
        android:paddingTop="17.7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="#fff"
        android:scrollbars="none" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12.3dp"
        android:layout_marginTop="44.7dp"
        android:orientation="horizontal">

        <customfonts.MyTextView_Lato_Light
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="19.3sp"
            android:textColor="#373737"/>



    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
             android:layout_marginLeft="5dp"
              android:src="@drawable/rent_acar"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RENT A CAR"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="At www.microrentacar.com our hire prices are very affordable without any doubts. We offer bespoke packages to suit your needs. No large deposit needed or long term contract."
                android:textAlignment="center"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/buy_acar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUY A CAR"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="Micro car rent is the most popular Islamabad salling car company for travellers coming over to the capital of Pakistan. Micro car rental to move in the streets of Islamabad and nearby areas."
                android:textAlignment="center"

                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/rent_guesthouse"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUEST HOUSE"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="We have a Great savings on hotels in Islamabad, Pakistan. Good availability and great rates. Read hotel reviews and choose the best hotel deal for your stay."
                android:textAlignment="center"

                />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12.3dp"
                android:layout_marginTop="29.7dp"
                android:orientation="horizontal">


                <customfonts.MyTextView_Lato_Light
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Cities in which we are providing services"
                    android:textSize="19.3sp"
                    android:textColor="#373737"/>



            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                >
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:background="#ed1b2e"
                android:id="@+id/card1"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                <Button
                    android:id="@+id/txtisb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" ISLAMABAD"

                    android:textColor="#6d6e70"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/txtkch"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_below="@+id/txtisb"
                    android:text=" KARACHI"

                    android:textColor="#6d6e70"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/txtlhr"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_below="@+id/txtkch"
                    android:text=" LAHORE"

                    android:textColor="#6d6e70"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/txmul"
             android:layout_below="@+id/txtlhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" MULTAN"

                    android:textColor="#6d6e70"
                    android:gravity="center"
                    />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/imgchg"
                    android:layout_marginTop="50dp"
                    android:layout_width="215dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/card1"
                    android:src="@drawable/isb" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardfb"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/food_curve_rect"
                    android:foreground="@drawable/fb"
                    >


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardtwitter"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/food_curve_rect"
                    android:foreground="@drawable/twitter"
                    >


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardinstagram"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/food_curve_rect"
                    android:foreground="@drawable/instagram"
                    >


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardskype"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/food_curve_rect"
                    android:foreground="@drawable/skype"
                    >


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </ExataClass.StickyScrollView>

</LinearLayout>

<android.support.design.widget.NavigationView
android:id="@+id/nvView"
app:headerLayout="@layout/nav_header"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="@android:color/white"
app:menu="@menu/drawer_view" />
</android.support.v4.widget.DrawerLayout>

